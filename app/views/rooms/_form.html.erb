  <% if room.errors.any? %>
    <div id="error_explanation">
        <h2>Há erros no formulário, por favor corrijá-os antes de proseguir.</h2>
    </div>
  <% end %>

<%= form_for(room) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= error_tag @room, :title %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= error_tag @room, :location %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= error_tag @room, :description %>
  </div>

  <p>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
    <%= error_tag @room, :picture %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
